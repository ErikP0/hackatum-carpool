<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        android:padding="16dp"
        android:layout_height="wrap_content">

    <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="2"
                      android:layout_height="wrap_content">

            <TextView
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:id="@+id/car_list_content_name"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/darkGrey"
                    tools:text="Model Name" android:layout_margin="4dp" android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/car_list_content_image"
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    android:layout_height="64dp"
                    android:src="@drawable/car_model"/>
        </LinearLayout>

        <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/darkGrey"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_list_content_begin_date"
                    tools:text="Start: 15.12.18"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/darkGrey"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_list_content_end_date"
                    tools:text="End: 16.12.18"
                    android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/darkGrey"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_list_content_pickup"
                    tools:text="Pickup: Hauptstraße 1, 43254 München"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/darkGrey"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_list_content_return"
                    tools:text="Return: Landstraße 333, 324234 Berlin"
                    android:textAlignment="viewEnd"/>
        </LinearLayout>

        <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:checked="true"
                android:checkMark="@drawable/ic_airport_shuttle_black_24dp"
                android:layout_margin="4dp"
                android:text="In Carpool"
                android:id="@+id/car_list_content_carpool_check"/>

    </LinearLayout>

</android.support.v7.widget.CardView>